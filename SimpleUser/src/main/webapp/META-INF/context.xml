<?xml version="1.0" encoding="UTF-8"?>
<Context debug="1" reloadable="true">
    <!-- JDBC datasource -->
    <Resource name="jdbc/simpleapp" 
              auth="Container"
              type="javax.sql.DataSource" 
              username="simpleapp" 
              password="simple314"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/simpleapp?autoReconnect=true"
              validationQuery="select 1"
              maxActive="10" 
              maxIdle="4"
              maxWait="1000"/>

    <!-- Security realm and location of the users file
